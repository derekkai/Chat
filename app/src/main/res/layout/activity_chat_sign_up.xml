<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.xiaobaiz.chat.ChatSignUp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/letschat"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/imageView2">

        <LinearLayout
            android:id="@+id/layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="35dp"
            android:layout_below="@+id/imageView2"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Username" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/s_username_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="eeeeeeee"
                    android:textSize="15dip" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/check"
                    android:id="@+id/s_username_c_iv"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/error"
                    android:id="@+id/s_username_e_iv"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="password"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/s_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="eeeeeeee"
                    android:textSize="15dip" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/check"
                    android:id="@+id/s_password_c_iv"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/error"
                    android:id="@+id/s_password_e_iv"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:id="@+id/textView"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/s_email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="eeeeeeee@yahoo.com.tw"
                    android:textSize="15dip" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/check"
                    android:id="@+id/s_email_c_iv"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/error"
                    android:id="@+id/s_email_e_iv"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check here to upload a photo !"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:id="@+id/s_uploadphoto_ib"
                    android:src="@drawable/uploadphotos"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sign up"
                    android:id="@+id/signup_btn"
                    android:background="@drawable/button_bg"
                    android:layout_alignBottom="@+id/s_uploadphoto_ib"
                    android:layout_toEndOf="@+id/s_uploadphoto_ib"
                    android:layout_marginLeft="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up Success !"
                    android:id="@+id/signup_s_tv"
                    android:textStyle="bold"
                    android:textColor="#00BB00"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up Error !"
                    android:textStyle="bold"
                    android:id="@+id/signup_e_tv"
                    android:textColor="#FF0000"
                    android:visibility="invisible" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>
